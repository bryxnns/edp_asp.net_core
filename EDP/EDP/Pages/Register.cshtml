@page
@model EDP.Pages.RegisterModel
@{
    ViewData["Title"] = "Register page";
}

<body>
	<div class="limiter">
		<div class="container-login100" style="background-image: url('images/bg-01.png');">
			<div class="wrap-login100 p-l-55 p-r-55 p-t-65 p-b-54">
				<form class="login100-form validate-form" method="post">
					<div asp-validation-summary="All" class="text-danger"></div>
					<span class="login100-form-title p-b-49">Register</span>

					<div class="wrap-input100 validate-input">
						<label class="label-input100" asp-for="MyUser.email"></label>
						<input class="input100" asp-for="MyUser.email" placeholder="enter your email" />
						<span class="focus-input100" data-symbol="&#9993;"></span>
						<span asp-validation-for="MyUser.email" class="text-danger"></span>
					</div>

					<div class="wrap-input100 validate-input">
						<label class="label-input100" asp-for="MyUser.name"></label>
						<input class="input100" asp-for="MyUser.name" placeholder="enter your username" />
						<span class="focus-input100" data-symbol="&#xf206;"></span>
						<span asp-validation-for="MyUser.name" class="text-danger"></span>
					</div>

					<div class="wrap-input100 validate-input">
						<label class="label-input100" asp-for="MyUser.password"></label>
						<input class="input100" asp-for="MyUser.password" placeholder="Type your password" />
						<span class="focus-input100" data-symbol="&#xf190;"></span>
						<span asp-validation-for="MyUser.password" class="text-danger"></span>
					</div>

					<div class="text-right p-t-8 p-b-20">
					</div>

					<div class="container-login100-form-btn">
						<div class="wrap-login100-form-btn">
							<div class="login100-form-bgbtn"></div>
							<input type="submit" value="Register" class="login100-form-btn"></input>
						</div>
					</div>

					<div class="txt1 text-center p-t-54 p-b-20">
						<span>Sign up with</span>
					</div>

					<div class="flex-c-m">
						<a href="#" class="login100-social-item bg3">
							<i class="fa fa-google"></i>
						</a>
					</div>

					<div class="flex-col-c p-t-20">
						<span class="txt1 p-b-17">Already have a account?</span>

						<a href="#" class="txt2">Login here</a>
					</div>
				</form>
			</div>
		</div>
	</div>
	<div id="dropDownSelect1"></div>

	<!--===============================================================================================-->
	<script src="vendor/jquery/jquery-3.2.1.min.js"></script>
	<!--===============================================================================================-->
	<script src="vendor/animsition/js/animsition.min.js"></script>
	<!--===============================================================================================-->
	<script src="vendor/bootstrap/js/popper.js"></script>
	<script src="vendor/bootstrap/js/bootstrap.min.js"></script>
	<!--===============================================================================================-->
	<script src="vendor/select2/select2.min.js"></script>
	<!--===============================================================================================-->
	<script src="vendor/daterangepicker/moment.min.js"></script>
	<script src="vendor/daterangepicker/daterangepicker.js"></script>
	<!--===============================================================================================-->
	<script src="vendor/countdowntime/countdowntime.js"></script>
	<!--===============================================================================================-->
	<script src="js/main.js"></script>

</body>