@page
@model EDP.Pages.Users.Product.Review.DetailsModel
@{
    ViewData["Title"] = "My Review";
}

<h1 class="display-4">@ViewData["Title"]</h1>

<form class="mt-3" method="post" enctype="multipart/form-data">
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="row mb-3">
        <input type="hidden" asp-for="myReviews.review_id"/>
        <input type="hidden" asp-for="myReviews.product_id"/>
        <input type="hidden" asp-for="myReviews.user_id"/>

        <label class="col-sm-2 col-form-label" asp-for="myReviews.review"></label>
        <div class="col-sm-10">
            <input class="form-control" asp-for="myReviews.review" />
            <span asp-validation-for="myReviews.review" class="text-danger"></span>
        </div>
    </div>

    <div class="row mb-3">
        <input type="file" accept="image/*" asp-for="Upload" class="form-control" onchange="showImgPreview(this)" />
        <span asp-validation-for="Upload" class="text-danger"></span>
        <img id="imgPreview" class="rounded-circle" style="height:300px;width:300px;object-fit:cover"
             src="@(string.IsNullOrEmpty(Model.myReviews.review_image) ? "/images/user.png" : Model.myReviews.review_image)"
             onerror="this.src='/images/user.png'" />
    </div>

    <div>
        <input type="submit" value="Create" class="btn btn-primary" />
    </div>
</form>

<script>
    function showImgPreview(input) {
        if (input.files[0]) {
            var uploadimg = new FileReader();
            uploadimg.onload = function (displayimg) {
                $("#imgPreview").attr('src', displayimg.target.result);
            }
            uploadimg.readAsDataURL(input.files[0]);
        }
    }
</script>