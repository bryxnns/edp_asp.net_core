@page
@model EDP.Pages.mycartModel
@{
    ViewData["Title"] = "Shopping Cart";
}

<h1 class="display-4">@ViewData["Title"]</h1>
<br>
<div class="container">
    <div class="row">
        <div class="col-8">
            <div class="row">
                <div class="col">
                    <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-shopping-carts/img5.webp"
                         class="rounded-3" alt="Cotton T-shirt" width="100" style="float:left;padding-right:20px;">

                    <h6 class="text-black mb-0 " style="padding-left:20px;">Cotton T-shirt</h6>
                    <h6 class="text-muted">Expiry date</h6>
                </div>
                <div class="col-md-auto">

                    <input id="form1" min="1" name="quantity" value="1" type="number"
                           class="form-control" width="10" />

                </div>
                <div class="col col-lg-2">
                    <button class="btn btn-outline-danger">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash" viewBox="0 0 16 16">
                            <path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0V6z" />
                            <path fill-rule="evenodd" d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1v1zM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4H4.118zM2.5 3V2h11v1h-11z" />
                        </svg>
                    </button>
                </div>

            </div>
        </div>

        <div class="col-4">
            <p style="font-size:20px;">Summary</p>
            <hr />
            <div class="row">
                <div class="col">
                    Subtotal
                </div>
                <div class="col">
                   <p style="text-align:right;"> $15.00</p>
                </div>
            </div>
            <div class="row">
                <div class="col">
                    Shipping Fee
                </div>
                <div class="col">
                    <p style="text-align:right;">$1.00</p>
                </div>
            </div>
            <div class="row">
                <div class="col">
                    Shipping Guarantee
                </div>
                <div class="col">
                    <p style="text-align:right;">$1.37</p>
                </div>
            </div>
            <div class="row">
                <div class="col">
                    Discount
                </div>
                <div class="col">
                    <p style="text-align:right;">-$1.00</p>
                </div>
            </div>
            <div class="row">
                <div class="col">
                    <p style="font-weight:bold">Grand Total</p>
                </div>
                <div class="col">
                   <p style="font-weight:bold;text-align:right"> $15.00</p>
                </div>
            </div>
            <hr />
            @*if haven't selected*@
            <button type="button" class="btn-block btn btn-primary">Select Voucher</button>
            @*if selected*@
            <p style="font-weight:bold;font-size:15px;">Selected Voucher:</p>
            <p style="font-weight:bold">10% off</p>
            Min Spend: $0.00
            <p>Expiry Date: 06-01-2023</p>
            <button type="button" class="btn-block btn btn-primary">Change Voucher</button>
            <button type="button" class="btn-block btn btn-danger">Remove Voucher</button>
          @*  checkout*@
          <button type="button" class="btn-block btn btn-success">Checkout</button>
        </div>
    </div>
</div>
